<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/listRow" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <View android:id="@id/above_list_margin" android:layout_width="fill_parent" android:layout_height="1.0dip" />
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/listContent" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/name_text" android:layout_weight="@dimen/file_list_weight_name" style="@style/Activity.List.Item.Padding" />
            <TextView android:id="@id/path_text" android:layout_weight="@dimen/file_list_weight_path" style="@style/Activity.List.Item.Padding.Description" />
            <TextView android:id="@id/date_text" android:layout_weight="@dimen/file_list_weight_date" style="@style/Activity.List.Item.Padding.Description" />
            <TextView android:id="@id/type_text" android:text="@string/image_file_type" android:layout_weight="@dimen/file_list_weight_type" style="@style/Activity.List.Item.Padding.Description" />
            <TextView android:id="@id/size_text" android:layout_weight="@dimen/file_list_weight_size" style="@style/Activity.List.Item.Padding.Description" />
        </LinearLayout>
        <View android:id="@id/below_list_margin" android:layout_width="fill_parent" android:layout_height="1.0dip" />
        <View android:id="@id/lineEndOfList" android:background="@color/LightTheme.divider" android:layout_width="fill_parent" android:layout_height="@dimen/line_height" android:alpha="1.0" />
    </LinearLayout>
</RelativeLayout>