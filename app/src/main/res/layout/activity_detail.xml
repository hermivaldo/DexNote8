<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <FrameLayout android:layout_weight="@dimen/margin_weight" style="@style/EmptyFrameLayout" />
            <LinearLayout android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="@dimen/content_weight">
                <include android:id="@id/details" android:layout_width="fill_parent" android:layout_height="fill_parent" layout="@layout/layout_detail_bottom" />
            </LinearLayout>
            <FrameLayout android:layout_weight="@dimen/margin_weight" style="@style/EmptyFrameLayout" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>